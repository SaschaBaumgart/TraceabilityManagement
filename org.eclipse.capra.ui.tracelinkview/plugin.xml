<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Capra Views"
            id="org.eclipse.capra.ui.tracelinkview">
      </category>
      <view
            name="Create Tracelinks"
            icon="icons/famfamfam/link.png"
            category="org.eclipse.capra.ui.tracelinkview"
            class="org.eclipse.capra.ui.linkview.views.TracelinkView"
            id="org.eclipse.capra.ui.linkview.views.TracelinkView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="org.eclipse.capra.ui.linkview.views.TracelinkView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
